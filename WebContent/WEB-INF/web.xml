<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <servlet>
    <servlet-name>demo.JDBC.CRUDServlet</servlet-name>
    <servlet-class>demo.JDBC.CRUDServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>demo.JDBC.CRUDServlet</servlet-name>
    <url-pattern>/crudDemo</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>demo.ShoppingCart.ProductListServlet</servlet-name>
    <servlet-class>demo.ShoppingCart.ProductListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>demo.ShoppingCart.ProductListServlet</servlet-name>
    <url-pattern>/listProduct</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>demo.ShoppingCart.UserLoginServlet</servlet-name>
    <servlet-class>demo.ShoppingCart.UserLoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>demo.ShoppingCart.UserLoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>demo.ShoppingCart.AddOrderItemServlet</servlet-name>
    <servlet-class>demo.ShoppingCart.AddOrderItemServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>demo.ShoppingCart.AddOrderItemServlet</servlet-name>
    <url-pattern>/addOrderItem</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>demo.ShoppingCart.OrderItemListServlet</servlet-name>
    <servlet-class>demo.ShoppingCart.OrderItemListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>demo.ShoppingCart.OrderItemListServlet</servlet-name>
    <url-pattern>/orderItemList</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>demo.ShoppingCart.createOrderItemsServlet</servlet-name>
  	<servlet-class>demo.ShoppingCart.createOrderItemsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>demo.ShoppingCart.createOrderItemsServlet</servlet-name>
  	<url-pattern>/createOrderItems</url-pattern>
  </servlet-mapping>
</web-app>